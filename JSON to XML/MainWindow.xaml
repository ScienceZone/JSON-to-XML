<Window x:Class="JSON_to_XML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_to_XML"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="580.5" WindowStyle="ToolWindow">
    <Grid>
        <Button x:Name="openJsonButton" Content="Open a JSON file" Margin="10,5,452,0" Click="openJsonButton_Click" Height="25" VerticalAlignment="Top"/>
        <Button x:Name="saveXmlButton" Content="Save XML to file" Margin="312,5,150,0" Click="saveXmlButton_Click" Height="25" VerticalAlignment="Top"/>
        <TextBox x:Name="jsonTextBox" Margin="10,35,312,11" TextWrapping="Wrap" FontFamily="Courier New"/>
        <TextBox x:Name="xmlTextBox" Margin="312,35,10,11" TextWrapping="Wrap" FontFamily="Courier New"/>
        <Button x:Name="parseButton" Content="Parse" Margin="260,155,260,0" Click="parseButton_Click" Height="29" VerticalAlignment="Top"/>

    </Grid>
</Window>
